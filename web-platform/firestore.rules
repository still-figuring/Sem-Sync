rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to verify authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user is the group Representative
    function isRep(resource) {
      return resource.data.repId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /notes/{noteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /courses/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /groups/{groupId} {
      // Allow any authenticated user to create a group
      // Allow read so users can find groups by code
      allow create, read: if isAuthenticated();
      
      // Allow updates for joining (adding to members) and Rep management
      // TODO: Tighten this to only allow Reps to edit metadata and Users to only add themselves
      allow update: if isAuthenticated();
      
      // Only the Rep can delete the group
      allow delete: if isAuthenticated() && isRep(resource);

      // Posts subcollection
      match /posts/{postId} {
        allow read, create: if isAuthenticated();
      }

      // Subcollection: Units
      match /units/{unitId} {
        allow read: if isAuthenticated();
        // Only Rep (admin) can create/edit units
        allow write: if isAuthenticated() && isRep(get(/databases/$(database)/documents/groups/$(groupId)));
      }

      // Subcollection: Resources
      match /resources/{resourceId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && isRep(get(/databases/$(database)/documents/groups/$(groupId)));
      }
    }

    match /tasks/{taskId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}